fonts = 'Source Sans Pro', 'Lucida Grande', sans-serif
codefonts = 'Source Code Pro', 'Courier', sans-serif

npmred = #cb3837
subpage-link-color = #666
subpage-link-color-active = npmred
text-color = #333
text-font-size = 18px

sectionWidth = 640px
navWidth = 240px
headerHeight = 20px
homepageWidth = 1100px
mobileColumnMaxWidth = 480px

centeredColumn(w)
  position relative
  margin 0 auto
  max-width w

pushLeft(n)
  -webkit-transform translateX(n)
  -moz-transform translateX(n)
  transform translateX(n)


*
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-box-sizing border-box

body
  font-family fonts
  color text-color
  margin 0
  padding 0
  font-size text-font-size

a
  color npmred

header
  height headerHeight
  background npmred

#logo
  display block
  position absolute
  top headerHeight + 30px
  left 40px
  width 100px

.container
  centeredColumn sectionWidth
  padding 0 15px

h1
  font-size 36px
  font-weight 600
  letter-spacing -0.6px

#page
  margin-top 30px

h1
  font-size 36px
  font-weight 600
  text-transform lowercase
  letter-spacing -0.6px

h2
  font-size 24px
  text-transform lowercase
  font-weight 600
  a
    color text-color
    &:hover
      color npmred
p
  line-height 1.5
  font-weight 400
  &.colophon
    margin-top 40px
    padding-top 10px
    font-size 16px
    border-top 2px solid rgba(text-color 0.2)
    text-align center
    color rgba(text-color 0.6)

pre code
  display block
  overflow-x auto
  padding 0.5em
  color #333
  background none repeat scroll 0% 0% #F8F8F8
  margin-top 15px
  margin-bottom 15px


.faint
  opacity 0.7

.centered
  text-align center

.italic
  font-style italic

[title="CLI"]
  &:after
    content "(Command Line Interface)"

nav
  position absolute
  top headerHeight + 100px
  left 40px
  margin-bottom 100px
  width navWidth

  section.active
    h2
      a
        color text-color
    .pages
      display block
      // max-height 3000px

  h2
    font-size 20px
    font-weight 600
    padding-left 0
    a
      text-decoration none
      color rgba(text-color, 0.5)

  .pages
    display none
    // max-height 0
    // overflow hidden
    // transition all 0.3s

    a
      display block
      line-height 1.6
      margin 0
      padding-left 10px
      text-decoration none
      color subpage-link-color
      font-size 15px
      border-left 3px solid transparent
      transition all 0.2s
      // transition border 1s
      &:hover, &.active
        color subpage-link-color-active
        text-decoration none
        border-color subpage-link-color-active



[data-page=index]

  #logo
    position relative
    top 0
    left 0
    display block
    width 100%
    // background yellow
    text-align center
    img
      display inline-block
      max-width 300px
      margin-top 40px

  nav
    display none

  h1
    color black
    text-align center
    font-size 50px
    padding-top 10px
    text-transform lowercase
    // padding-top 120px

  h2
    text-transform lowercase
    centeredColumn homepageWidth
    margin-top 60px
    margin-bottom 10px
    &:after
      color rgba(text-color, 0.4)

  ul.pages
    list-style none
    margin 0
    padding 0
    line-height 2
    centeredColumn homepageWidth
    -webkit-columns 3
    -moz-columns 3
    columns 3
    -webkit-column-gap 60px
    -moz-column-gap 60px
    column-gap 60px

    li
      column-break-inside avoid
      -webkit-column-break-inside avoid
      -moz-column-break-inside avoid

    a
      display inline-block
      // min-width 150px
      text-decoration none
      // font-size 18px
      font-weight 600
      &:hover
        text-decoration underline
    span
      font-size 16px

footer
  margin 150px 0 100px 0

  .logo img
    max-width 300px
    margin-bottom 40px

  p
    font-size 16px
    text-align center
    color rgba(text-color 0.7)

@media only screen and (max-width: navWidth + sectionWidth)

  #logo
    // display block
    // position absolute
    // width 200px

  nav
    display none
    position relative
    top 0
    left 0
    width 100%

  header
    display none

  #page
    margin-top 100px
    -webkit-transform translateX(0)
    -moz-transform translateX(0)
    transform translateX(0)
    padding 10px


  [data-page=index]
    section
      padding 50px 20px 0 20px

    h2
      centeredColumn(mobileColumnMaxWidth)

    ul.pages
      -webkit-columns 1
      -moz-columns 1
      columns 1
      centeredColumn(mobileColumnMaxWidth)
