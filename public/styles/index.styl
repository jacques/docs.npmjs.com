@import "_config"
@import "_homepage"
@import "_404"

*
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-box-sizing border-box

body
  font-family fonts
  color text-color
  margin 0
  padding 0
  font-size text-font-size

a
  color npmred

header
  height headerHeight
  background npmred

#logo
  display block
  position absolute
  top headerHeight + 30px
  left 40px
  width 130px

.container
  centeredColumn sectionWidth
  padding 0 15px

h1
  font-size 36px
  font-weight 600
  letter-spacing -0.6px

#page
  margin-top 30px

h1
  font-size 36px
  font-weight 600
  text-transform lowercase
  letter-spacing -0.6px

h2
  font-size 24px
  text-transform lowercase
  font-weight 600
  a
    color text-color
    &:hover
      color npmred
p
  line-height 1.5
  font-weight 400
  &.colophon
    margin-top 40px
    padding-top 10px
    font-size 16px
    border-top 2px solid rgba(text-color 0.2)
    text-align center
    color rgba(text-color 0.6)

pre code
  display block
  overflow-x auto
  padding 0.5em
  color #333
  background none repeat scroll 0% 0% #F8F8F8
  margin-top 15px
  margin-bottom 15px


.faint
  opacity 0.7

.centered
  text-align center

.italic
  font-style italic

nav
  position absolute
  top headerHeight + 100px
  left 0px
  padding 0 0 100px 40px
  margin-bottom 100px
  width navWidth

  section.active
    h2
      a
        color npmred
    .pages
      display block

  h2
    font-size 18px
    font-weight 600
    padding-left 0
    a
      text-decoration none
      color text-color

  .pages
    display none

    a
      display block
      line-height 1.6
      margin 0
      padding-left 10px
      text-decoration none
      color subpage-link-color
      font-size 15px
      border-left 3px solid transparent
      transition all 0.2s
      &:hover, &.active
        color subpage-link-color-active
        text-decoration none
        border-color subpage-link-color-active

footer
  margin 150px 0 100px 0

  .logo img
    max-width 300px
    margin-bottom 40px

  p
    font-size 16px
    text-align center
    color rgba(text-color 0.7)


@media only screen and (max-width: breakpoint)

  #logo
    position relative
    top 0
    left 0
    display block
    width 100%
    text-align center
    img
      display inline-block
      max-width 300px
      margin-top 40px

  nav
    display none
    position relative
    top 0
    left 0
    width 100%

  header
    display none

  #page
    margin-top 0px
    padding 10px

.toc

  // Disabled on all pages except / and 404
  display none

  h2
    text-transform lowercase
    centeredColumn homepageWidth
    margin-top 60px
    margin-bottom 10px
    &:after
      color rgba(text-color, 0.4)

ul.pageColumns
  list-style none
  margin 0
  padding 0
  line-height 2
  centeredColumn homepageWidth
  -webkit-columns 3
  -moz-columns 3
  columns 3
  -webkit-column-gap 60px
  -moz-column-gap 60px
  column-gap 60px

  li
    column-break-inside avoid
    -webkit-column-break-inside avoid
    -moz-column-break-inside avoid

  a
    display inline-block
    text-decoration none
    font-weight 600
    &:hover
      text-decoration underline
  span
    font-size 16px


@media only screen and (max-width: breakpoint)

  ul.pageColumns
    -webkit-columns 1
    -moz-columns 1
    columns 1
    centeredColumn(mobileColumnMaxWidth)
  .toc
    h2
      centeredColumn(mobileColumnMaxWidth)
