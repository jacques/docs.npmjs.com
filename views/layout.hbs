<!DOCTYPE html>
<html>

<head>
  {{#if page.title}}
    <title>{{page.title}}</title>
  {{else}}
    <title>docs.npmjs.com</title>
  {{/if}}
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="The place where all things npm will one day be documented">
  <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,400italic|Source+Code+Pro:400,600,700" rel="stylesheet" type="text/css">
  <link rel="stylesheet" type="text/css" href="/styles/index.css">
</head>

<body data-page="{{pageId}}">

  <header>
  </header>

  <a href="/" id="logo">
    <img src="/images/npm.svg">
  </a>

  <nav>
    {{#each content.sections}}
      <section id="{{id}}">

        <h2 title="{{title}}">
          {{#if href}}
            <a href="{{href}}">{{title}}</a>
          {{else}}
            {{title}}
          {{/if}}
        </h2>

        <div class="pages">
          {{#each ../content.pages}}
              {{#equal ../id section}}
                <a href="{{href}}">{{title}}</a>
              {{/equal}}
          {{/each}}
        </div>

      </section>
    {{/each}}
  </nav>

  {{{body}}}

  <footer>
    <p>
      This site is a work in progress. <a href="https://github.com/npm/docs.npmjs.com/issues">Let us know</a> if you find bugs or have feature requests.
    </p>

    <p>
      Need help? Tweet at <a href="https://twitter.com/npm_support">@npm_support</a> or email <a href="mailto:support@npmjs.com">support@npmjs.com</a>.
    </p>
  </footer>

  <script>
    (function(i, s, o, g, r, a, m) {
      i['GoogleAnalyticsObject'] = r;
      i[r] = i[r] || function() {
        (i[r].q = i[r].q || []).push(arguments)
      }, i[r].l = 1 * new Date();
      a = s.createElement(o),
      m = s.getElementsByTagName(o)[0];
      a.async = 1;
      a.src = g;
      m.parentNode.insertBefore(a, m)
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-53856291-2', 'auto');
    ga('send', 'pageview');
  </script>

</body>
</html>
